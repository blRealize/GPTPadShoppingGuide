<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white_10dp">

    <LinearLayout
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@mipmap/ic_default_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:textColor="@color/text_black6"
            tools:text="小红"
            android:textSize="15sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_time"
            tools:text="2023-4-29 10:30:00"
            android:textColor="@color/text_black6"
            android:textSize="13sp"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_content"
        tools:text="一起学习一下安卓四大组件的使用方法以及其生命周期一起学习一下安卓四大组件的使用方法以及其生命周期一起学习一下安卓四大组件的使用方法以及其生命周期一起学习一下安卓四大组件的使用方法以及其生命周期
一起学习一下安卓四大组件的使用方法以及其生命周期一起学习一下安卓四大组件的使用方法以及其生命周期一起学习一下安卓四大组件的使用方法以及其生命周期一起学习一下安卓四大组件的使用方法以及其生命周期"
        android:textColor="@color/text_black9"
        android:textSize="12sp"
        android:layout_marginTop="7dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>